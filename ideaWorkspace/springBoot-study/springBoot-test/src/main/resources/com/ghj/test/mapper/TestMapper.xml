<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghj.test.mapper.TestMapper">

    <insert id="insert" parameterType="map">
        insert into spring_boot_test (id, name, code, address, age, brith)
        VALUES (#{id}, #{name}, #{code}, #{address}, #{age}, #{brith});
    </insert>
    <update id="update" parameterType="map">
        update spring_boot_test
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="brith != null">
                brith = #{brith},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="delete" parameterType="string">
        delete from spring_boot_test where id = #{id}
    </delete>
    <select id="getAll" resultType="java.util.Map">
        select * from spring_boot_test
    </select>
    <select id="getById" resultType="java.util.Map">
        select * from spring_boot_test where id = #{id}
    </select>
</mapper>